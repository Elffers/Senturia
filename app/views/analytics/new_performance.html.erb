<h2>Add a performance</h2>

<%= form_for @performance, url: new_performance_path do |f| %>
  <% if @performance.errors.any? %>
  <div class= "error_messages">
    <h3> Form is invalid </h3>
    <ul>
      <% for message in @performance.errors.full_messages %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :date, "Date (dd/mm/yyyy)"%><br>
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :venue%><br>
    <%= f.text_field :venue %>
  </div>
  <div class="field">
    <%= f.label :program %><br>
    <%= f.text_field :program %>
  </div><br>
  <div class= "actions">
    <%=f.submit "Add to calendar" %>
  </div>

<% end %>