<div id="rep_list">
  <h2>repertoire list</h2>
    <div id="bio_pic">
      <%=image_tag("headshot.jpg", width:"250")%>
      <div id="carlin"><%=link_to "Carlin Ma Photography", "http://www.carlinmaphotography.com/" %></div>
    </div>
  <h3><%=link_to "View full resume", "public/resume.pdf" %></h3>
  <table class="opera_list">
    <tbody>
      <% @list.each do |composer|%>
        <tr>
          <% unless composer.name == "" %>
            <td><strong><%= composer.name %></strong>
            <% composer.operas.each do |opera| %>
              <ul>
                <li><i><%=opera.name%></i> <%="[#{opera.notes}]" if opera.notes!= '' %></li>
              </ul>
            <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <div id="home_link">
    <%=link_to "Back to top", root_path, class: "smoothScroll" %>
  </div>
</div>

